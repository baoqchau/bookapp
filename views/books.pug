extends layout

block content
    div(class="container")
      div(class="row")
        div(class="col-lg-12")
          h1(class="page-header")= title
      div(class="row")
        each book in books
             div(class="col-md-3 portfolio-item")
               a(href="/book/"+book.id): img(src= book.image width="100" height="125")
               h3= book.title
               p= book.summary

          
