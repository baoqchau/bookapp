extends layout

block content
    div(class="container")
      div(class="row")
        div(class="col-lg-12")
          h1(class="page-header")= title
- var i = 0;
 while (i < books.length)
      div(class="row")
-        for (var j=i;j<i+4; j++)
             div(class="col-md-3 portfolio-item")
               a(href="/book/"+books[j].id): img(src= books[j].image width="100" height="125")
               h3= books[j].title
               p= books[j].summary
-   i += 4;

          
