extends layout

block content
    h1= title
    form#formAddBook(class="form-horizontal",name="addbook", method="post",action="/addbook")
      div(class="form-group")
        label(class="col-sm-2 control-label") Title
        div(class="col-sm-10")
          input#inputTitle(type="text",placeholder="Title",name="title")
      div(class="form-group")
        label(class="col-sm-2 control-label") Author  
        div(class="col-sm-10")
          input#inputAuthor(type="text",placeholder="Author",name="author")
      div(class="form-group")
        label(class="col-sm-2 control-label") Image Link  
        div(class="col-sm-10")
          input#inputImage(type="text",placeholder="Image Link",name="image")
      div(class="radio-inline")
        label
          input(type="radio",name="optionsRadios",value="used")
          | Used
      div(class="radio-inline")
        label
          input(type="radio",name="optionsRadios",value="new")
          | New 
      div(class="radio-inline")
        label
          input(type="radio",name="optionsRadios",value="acceptable")
          | Acceptable 
      div(class="checkbox")
        label
          input(type="checkbox")
          | Ebook
      div(class="checkbox")
        label
          input(type="checkbox")
          | Paperback 
      div(class="checkbox")
        label
          input(type="checkbox")
          | Hardcover 
      label(class="col-sm-2 control-label") Language 
      select
        option(value="English")
          | English
        option(value="Spanish")
          | Spanish
        option(value="Vietnamese")
          | Vietnamese
        option(value="French")
          | French
      div(class="form-group")
        div(class="col-sm-offset-2 col-sm-10")
          button(type="submit",class="btn btn-default") Submit
  
